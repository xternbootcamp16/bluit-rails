<%= form_for @post do |f| %>
  <fieldset>
    <%= f.label :category_id %>
    <%= f.collection_select :category_id, Category.all, :id, :name, prompt: "-- Select a category --" %>
  </fieldset>
  <fieldset>
    <%= f.label :title %>
    <%= f.text_field :title, autofocus: true %>
  </fieldset>
  <fieldset>
    <%= f.label :link_url %>
    <%= f.url_field :link_url %>
  </fieldset>
  <fieldset>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </fieldset>

  <%= f.submit class: "btn btn-default" %>
<% end %>
