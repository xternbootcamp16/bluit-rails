<%= form_for @category do |f| %>
  <fieldset>
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true %>
  </fieldset>

  <fieldset>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </fieldset>

  <fieldset>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </fieldset>

  <fieldset>
    <%= f.label :sidebar %>
    <%= f.text_area :sidebar %>
  </fieldset>

  <fieldset>
    <%= f.label :submission_text %>
    <%= f.text_area :submission_text %>
  </fieldset>

  <%= f.submit class: "btn btn-default" %>
<% end %>
