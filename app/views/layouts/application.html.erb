<!DOCTYPE html>
<html>
<head>
  <title>BluitRails</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container wrap">
  <div class="row">
    <div class="col-xs-12">
      <header>
        <div class="well">
          <%= link_to "Bluit", posts_path %>
        </div>
      </header>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-xs-8">
        <main>
          <div class="well">
            <!-- BEGIN main content -->
            <%= yield %>
            <!-- END main content -->
          </div>
        </main>
      </div>
      <div class="col-xs-4">
        <nav id="sidebar">
          <div class="well">
            <%= link_to "Submit a new link", new_post_path %>
          </div>
        </nav>
      </div>
    </div>
  </div>
  <div class="push"></div>
</div>

<footer>
  <div class="well">
    &copy; Super Original Productions, Inc.
  </div>
</footer>

</body>
</html>
