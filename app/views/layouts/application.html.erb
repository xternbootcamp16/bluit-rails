<!DOCTYPE html>
<html>
<head>
  <title>Bluit</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container wrap">
  <div class="row">
    <div class="col-xs-12">
      <nav id="categories">
        <div class="dropdown">
          <button id="dLabel" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Categories
            <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
            <% Category.find_each do |category| %>
              <li role="presentation">
                <%= link_to category.name, category, role: 'menuitem', tabindex: "-1" %>
              </li>
            <% end %>
          </ul>
        </div>
        <ul class="category-list">
          <% Category.all.each_with_index do |category, i| %>
            <li>
              <% if i > 0 %>
                <span class="separator">-</span>
              <% end %>
              <%= link_to category.name, category %>
            </li>
          <% end %>
        </ul>
      </nav>
      <header>
        <%= link_to "Bluit", root_path %>
      </header>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-xs-8">
        <main>
          <%= flash_messages(flash) unless flash.empty? %>
          <!-- BEGIN main content -->
          <%= yield %>
          <!-- END main content -->
        </main>
      </div>
      <div class="col-xs-4">
        <nav id="sidebar">
          <%= link_to "Submit a new link", new_post_path %>
          <%= link_to "Create your own subbluit", new_category_path %>
          <div>
            <%= yield :sidebar %>
          </div>
        </nav>
      </div>
    </div>
  </div>
  <div class="push"></div>
</div>

<footer>
  Use of this site constitutes acceptance of the <a href="http://dresdenfiles.wikia.com/wiki/Unseelie_Accords">Unseelie Accords</a>.
</footer>

</body>
</html>
