<!DOCTYPE html>
<html>
<head>
  <title>BluitRails</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container wrap">
  <div class="row">
    <div class="col-xs-12">
      <header>
        <%= link_to "Bluit", posts_path %>
      </header>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-xs-8">
        <main>
            <%= flash_messages flash %>
            <!-- BEGIN main content -->
            <%= yield %>
            <!-- END main content -->
        </main>
      </div>
      <div class="col-xs-4">
        <nav id="sidebar">
          <%= link_to "Submit a new link", new_post_path %>
          <%= link_to "Create your own subbluit", new_category_path %>
        </nav>
      </div>
    </div>
  </div>
  <div class="push"></div>
</div>

<footer>
  &copy; Super Original Productions, Inc.
</footer>

</body>
</html>
